<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="670dp"
    android:layout_height="910dp"
    android:orientation="vertical"
    android:paddingStart="1dp"
    android:paddingLeft="100dp"
    android:paddingEnd="1dp"
    android:paddingRight="100dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="720dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:background="#5F28DC"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="1dp"
            android:text="Greetings Card Creator"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#9C9760"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="651dp"
        android:layout_height="200dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:ems="10"
            android:hint="Please Enter Your Name Here"
            android:hyphenationFrequency="none"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="651dp"
            android:layout_height="match_parent"
            android:background="#524675"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_weight="1"
                android:text="Reset" />

            <Spinner
                android:layout_width="208dp"
                android:layout_height="98dp"
                android:layout_marginHorizontal="25dp"
                android:background="#5D3FB5"
                android:backgroundTint="#5D3FB5"
                android:dropDownWidth="match_parent" />

            <Button
                android:id="@+id/button5"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/tenor_sans"
                android:text="Preview" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="670dp"
        android:layout_height="599dp"
        android:layout_gravity="left|center_vertical"
        android:background="#5F28DC"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="344dp"
            android:layout_height="587dp"
            android:layout_gravity="right"
            android:background="#FFEB3B"
            android:gravity="center|center_horizontal"
            android:hint="Preview Screen"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="291dp"
            android:layout_height="599dp"
            android:layout_weight="1"
            android:src="@drawable/shopping" />


    </LinearLayout>

</LinearLayout>